{
  "name": "Review",
  "type": "object",
  "properties": {
    "experience_id": {
      "type": "string",
      "description": "Reference to Experience entity"
    },
    "user_email": {
      "type": "string",
      "description": "User's email who wrote the review"
    },
    "user_name": {
      "type": "string",
      "description": "Name of the reviewer"
    },
    "rating": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "Rating from 1 to 5 stars"
    },
    "comment": {
      "type": "string",
      "description": "Review comment/text"
    },
    "helpful_count": {
      "type": "number",
      "default": 0,
      "description": "Number of users who found this helpful"
    }
  },
  "required": [
    "experience_id",
    "user_email",
    "user_name",
    "rating"
  ]
}